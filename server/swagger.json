{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Ballers API",
      "description": "API documentation for Ballers from Highrachy",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "localhost:3000",
    "basePath": "/api/v1",
    "tags": [
      {
        "name": "User",
        "description": "API for users in the system"
      }
    ],
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "paths": {
      "/user/register": {
        "post": {
          "tags": [
            "User"
          ],
          "description": "Register new user in system",
          "parameters": [
            {
              "name": "user",
              "in": "body",
              "description": "User that we want to register",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "New user is created",
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "value": true
                  },
                  "message": {
                    "type": "string",
                    "value": "User registered"
                  },
                  "token": {
                    "tyoe": "string",
                    "value": "TOKEN_STRING_HERE"
                  }
                }
              }
            },
            "500": {
              "description": "User was not created",
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "value": false
                  },
                  "message": {
                    "type": "string",
                    "value": "Error adding user"
                  }
                }
              }
            }
          }
        }
      }
    },
    "definitions": {
      "User": {
        "required": [
          "firstName",
          "lastName",
          "email",
          "password",
          "confirmPassword"
        ],
        "properties": {
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "uniqueItems": true
          },
          "password": {
            "type": "string"
          },
          "confirmPassword": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          }
        }
      }
    }
  }
  