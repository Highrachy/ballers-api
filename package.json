{
  "name": "ballers-api",
  "version": "1.0.0",
  "description": "Ballers API",
  "main": "app.js",
  "scripts": {
    "build": "npm run build:clean && npm run build:server",
    "build:clean": "rm -rf build && mkdir build",
    "build:server": "babel -d ./build ./server -s",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "start": "node ./build/index.js",
    "start:dev": "nodemon --exec babel-node ./server/index.js",
    "test": "NODE_ENV=test nyc mocha",
    "test:only": "NODE_ENV=test mocha",
    "test:watch": "NODE_ENV=test mocha --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Highrachy/ballers-api.git"
  },
  "keywords": [],
  "author": "tobieeniafe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Highrachy/ballers-api/issues"
  },
  "homepage": "https://github.com/Highrachy/ballers-api#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/register": "^7.9.0",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "mocha": "^7.1.1",
    "mongodb-memory-server": "^6.5.2",
    "moxios": "^0.4.0",
    "nodemon": "^2.0.3",
    "nyc": "^15.0.1",
    "prettier": "^2.0.4",
    "rosie": "^2.0.1",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@sendgrid/mail": "^7.0.1",
    "app-root-path": "^3.0.0",
    "aws-sdk": "^2.841.0",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.22.0",
    "cors": "^2.8.5",
    "date-fns": "^2.11.0",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.2",
    "express": "^4.17.1",
    "joi-objectid": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.9",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.4.6",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "uuid": "^3.4.0",
    "winston": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
